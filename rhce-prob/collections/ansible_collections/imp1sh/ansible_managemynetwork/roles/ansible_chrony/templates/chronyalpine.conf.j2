# configuration file generated by Ansible

#pool pool.ntp.org iburst
{% if chronyd_servers is defined %}
{% for server in chronyd_servers %}
server {{ server }}
{% endfor %}
{% endif %}

{% if chronyd_pools is defined %}
{% for pool in chronyd_pools %}
pool {{ pool }} iburst
{% endfor %}
{% else %}
pool 2.freebsd.pool.ntp.org iburst
{% endif %}

{% if chronyd_allowfroms is defined %}
{% for allowrecord in chronyd_allowfroms %}
allow {{ allowrecord }}
{% endfor %}
{% endif %}

{% if chronyd_denyfroms is defined %}
{% for denyrecord in chronyd_denyfroms %}
deny {{ denyrecord }}
{% endfor %}
{% endif %}

initstepslew 10 pool.ntp.org
driftfile /var/lib/chrony/chrony.drift
rtcsync
cmdport 0
